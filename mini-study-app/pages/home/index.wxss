@import "../../styles/theme.wxss";
@import "../../styles/layout.wxss";

.home-page {
  display: flex;
  flex-direction: column;
  background: #f5f5f7;
  min-height: 100vh;
  padding: 0;
}

/* 欢迎栏 */
.welcome-bar {
  padding: 16rpx 24rpx 8rpx;
  background: transparent;
}

.welcome-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.welcome-greeting {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.greeting-icon {
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.2;
}

.greeting-time {
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

.header-buttons {
  display: flex;
  gap: 8rpx;
}

.header-btn {
  width: 44rpx;
  height: 44rpx;
  background: #ffffff;
  border-radius: 999rpx;
  border: 1rpx solid #e5e5ea;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #007aff;
  transition: background-color 0.2s ease, transform 0.2s ease;
}

.header-btn:active {
  background: #f2f2f7;
  transform: scale(0.96);
}

.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分区 */
.section {
  padding: 16rpx 24rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

.btn-refresh {
  width: 48rpx;
  height: 48rpx;
  background: #f0f4ff;
  border: 2rpx solid var(--brand);
  border-radius: 12rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-refresh:active {
  background: #e0e9ff;
  transform: scale(0.95) rotate(180deg);
}

/* 轮播卡片 */
.banner-card {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.banner-card swiper {
  height: 280rpx;
}

.banner-item {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  height: 280rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 30%, rgba(0, 0, 0, 0.7) 100%);
  display: flex;
  align-items: flex-end;
  padding: 24rpx;
}

.banner-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.banner-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
}

.banner-tag {
  display: inline-flex;
  background: rgba(37, 99, 235, 0.9);
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  width: fit-content;
}

.banner-clickable {
  cursor: pointer;
  transition: transform 0.2s ease;
}

.banner-clickable:active {
  transform: scale(0.98);
}

.banner-link-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
  font-weight: 500;
  opacity: 0.9;
}

/* 学习入口卡片（单列） */
.entry-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.entry-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx 20rpx 22rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.entry-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.entry-inner {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.entry-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
}

.entry-desc {
  font-size: 22rpx;
  color: var(--muted);
}

.entry-arrow {
  position: absolute;
  top: 50%;
  right: 16rpx;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: var(--brand);
  opacity: 0.5;
  transition: all 0.3s ease;
}

.entry-card:active .entry-arrow {
  opacity: 1;
  right: 12rpx;
}

.entry-cover {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 16rpx;
  background: #e5e7eb;
}

.entry-cover-img {
  width: 100%;
  height: 100%;
  display: block;
}

.entry-cover-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #eff6ff, #e0f2fe);
}

.exam-entry .entry-cover-placeholder {
  background: linear-gradient(135deg, #fef3c7, #fed7aa);
}

.manager-card .entry-cover-placeholder {
  background: linear-gradient(135deg, #dcfce7, #bbf7d0);
}

.manager-card {
  background: linear-gradient(135deg, rgba(22, 163, 74, 0.06), rgba(22, 163, 74, 0.18));
  border: 2rpx solid rgba(22, 163, 74, 0.5);
  position: relative;
  overflow: hidden;
}

.manager-card::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(180deg, #22c55e, #16a34a);
}

.manager-badge-row {
  margin-bottom: 4rpx;
}

.manager-badge {
  display: inline-flex;
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(22, 163, 74, 0.1);
  color: #15803d;
  font-size: 20rpx;
  font-weight: 600;
}

/* 系统公告横幅 */
.notice-banner-section {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.notice-banner-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 12rpx 18rpx;
  box-shadow: 0 4rpx 10rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid rgba(148, 163, 184, 0.3);
}

.notice-inline-list {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  overflow-x: auto;
}

.notice-inline-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: #f9fafb;
  flex-shrink: 0;
  min-width: 520rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.03);
}

.notice-inline-main {
  flex: 1;
}

.notice-inline-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.notice-inline-meta {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: var(--muted);
}

.notice-inline-tag {
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  background: #fee2e2;
  color: #b91c1c;
  font-size: 20rpx;
  font-weight: 600;
}

.notice-inline-arrow {
  font-size: 28rpx;
  color: var(--brand);
  opacity: 0.7;
}

.admin-actions {
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

.admin-action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.admin-action-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
  min-height: 180rpx;
}

.action-icon {
  font-size: 44rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: rgba(37, 99, 235, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.action-desc {
  font-size: 24rpx;
  color: var(--muted);
}

.action-arrow {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 28rpx;
  color: var(--brand);
  opacity: 0.6;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.admin-action-card:active .action-arrow {
  transform: translateX(8rpx);
  opacity: 1;
}

/* 查看完整列表按钮 */
.btn-view-all {
  width: 100%;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
  transition: all 0.3s ease;
}

.btn-view-all:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(37, 99, 235, 0.15);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.btn-arrow {
  font-size: 28rpx;
}

/* 员工列表 */
.employees-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.employee-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.employee-item:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.employee-avatar {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.employee-info {
  flex: 1;
  margin-left: 12rpx;
}

.employee-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 4rpx;
}

.employee-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
}

.meta-badge {
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 20rpx;
}

.meta-badge.employee {
  background: #dcfce7;
  color: #15803d;
}

.meta-badge.manager {
  background: #fef3c7;
  color: #b45309;
}

.meta-badge.admin {
  background: #dbeafe;
  color: #1e40af;
}

.meta-text {
  color: var(--muted);
}

.employee-arrow {
  font-size: 24rpx;
  color: var(--brand);
  opacity: 0.5;
  transition: all 0.3s ease;
}

.employee-item:active .employee-arrow {
  opacity: 1;
}

/* 底部空间 */
.bottom-space {
  height: 40rpx;
}

/* 系统公告弹窗 */
.notice-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.notice-dialog {
  width: 80%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.25);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.notice-header {
  padding: 24rpx 28rpx 16rpx;
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.35);
}

.notice-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.notice-body {
  padding: 16rpx 40rpx;
  max-height: 480rpx;
}

.notice-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.notice-content {
  font-size: 26rpx;
  color: var(--text);
  line-height: 1.6;
  white-space: pre-wrap;
}

.notice-confirm {
  margin: 8rpx 24rpx 24rpx;
}

