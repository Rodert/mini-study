/* pages/admin/growth/index/index.wxss */
@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.admin-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
}

.back-button,
.top-placeholder {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.filters {
  display: flex;
  gap: 16rpx;
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e2e8f0;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: var(--muted);
  margin-bottom: 4rpx;
}

.picker {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  padding: 10rpx 16rpx;
  font-size: 26rpx;
}

.search-input-wrapper {
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-input {
  font-size: 26rpx;
}

.post-list {
  padding: 16rpx 24rpx 40rpx;
}

.post-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.06);
}

.post-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 700;
}

.post-header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.post-meta {
  font-size: 22rpx;
  color: var(--muted);
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
}

.status-tag.pending {
  background: #fef9c3;
  color: #854d0e;
}

.status-tag.approved {
  background: #dcfce7;
  color: #15803d;
}

.status-tag.rejected {
  background: #fee2e2;
  color: #b91c1c;
}

.post-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.btn-primary {
  padding: 8rpx 18rpx;
  border-radius: 12rpx;
  border: none;
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  color: #ffffff;
  font-size: 24rpx;
}

.btn-secondary {
  padding: 8rpx 18rpx;
  border-radius: 12rpx;
  border: none;
  background: #fee2e2;
  color: #b91c1c;
  font-size: 24rpx;
}

.btn-danger {
  padding: 8rpx 18rpx;
  border-radius: 12rpx;
  border: none;
  background: #f8fafc;
  color: #64748b;
  font-size: 24rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: var(--muted);
}