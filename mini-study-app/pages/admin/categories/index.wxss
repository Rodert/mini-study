@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.page {
  padding: 24rpx;
  background: #f3f4f6;
  min-height: 100vh;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--muted);
}

.list {
  max-height: 100vh;
}

.item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
}

.item-main {
  flex: 1;
  margin-right: 24rpx;
}

.item-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.item-role {
  font-size: 22rpx;
  color: var(--brand);
  background: rgba(37, 99, 235, 0.06);
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.item-meta {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--muted);
}

.item-cover-block {
  width: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.cover-wrapper {
  width: 100%;
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  background: #f3f4f6;
}

.item-cover {
  width: 100%;
  height: 160rpx;
  display: block;
}

.cover-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
}

.placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: var(--muted);
}

.item-actions {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 8rpx;
}

.link-action {
  font-size: 22rpx;
}

.link-primary {
  color: #2563eb;
}

.link-secondary {
  color: #9ca3af;
}

.link-action:active {
  opacity: 0.7;
}

.cover-label {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--muted);
}

.badge {
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
}

.badge-default {
  background: rgba(148, 163, 184, 0.16);
  color: #64748b;
}

.badge-custom {
  background: rgba(34, 197, 94, 0.14);
  color: #16a34a;
}

.empty {
  margin-top: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--muted);
}
