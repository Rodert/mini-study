@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.admin-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.back-button,
.top-placeholder {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.back-button:active {
  opacity: 0.7;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filters {
  display: flex;
  gap: 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: var(--muted);
  margin-bottom: 8rpx;
}

.picker {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  padding: 16rpx;
  font-size: 26rpx;
}

.btn-primary {
  padding: 20rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.25);
}

.content-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.content-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.25);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.item-meta {
  font-size: 24rpx;
  color: var(--muted);
  display: flex;
  gap: 16rpx;
  align-items: center;
  justify-content: space-between;
}

.item-actions {
  display: flex;
  gap: 12rpx;
}

.btn-secondary,
.btn-danger {
  flex: 1;
  padding: 16rpx 0;
  border-radius: 12rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
}

.btn-secondary {
  background: #f0f4ff;
  color: var(--brand);
}

.btn-danger {
  background: #fee2e2;
  color: #b91c1c;
}

.btn-secondary:active,
.btn-danger:active {
  opacity: 0.85;
  transform: scale(0.97);
}

.empty-state {
  font-size: 26rpx;
  color: var(--muted);
  text-align: center;
  padding: 80rpx 0;
}

/* 状态标签与不同状态的卡片样式 */
.status-pill {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-pill-draft {
  background: #fef3c7;
  color: #92400e;
}

.status-pill-published {
  background: #dcfce7;
  color: #166534;
}

.status-pill-offline {
  background: #e5e7eb;
  color: #4b5563;
}

.content-item.status-draft {
  border-color: #facc15;
  background: #fffbeb;
}

.content-item.status-published {
  border-color: #bbf7d0;
}

.content-item.status-offline {
  border-color: #e5e7eb;
  background: #f9fafb;
}
