@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.admin-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.back-button,
.top-placeholder {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.back-button:active {
  opacity: 0.7;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filters {
  display: flex;
  gap: 16rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: var(--muted);
  margin-bottom: 8rpx;
}

.picker {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  padding: 16rpx;
  font-size: 26rpx;
}

.btn-primary {
  padding: 20rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.25);
}

.content-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.content-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.item-meta {
  font-size: 24rpx;
  color: var(--muted);
  display: flex;
  gap: 16rpx;
}

.item-actions {
  display: flex;
}

.btn-secondary {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  background: #f0f4ff;
  color: var(--brand);
  font-size: 26rpx;
  font-weight: 600;
}

.empty-state {
  font-size: 26rpx;
  color: var(--muted);
  text-align: center;
  padding: 80rpx 0;
}
