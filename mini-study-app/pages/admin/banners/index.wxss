@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.admin-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.back-button,
.top-placeholder {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.back-button:active {
  opacity: 0.7;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-primary {
  padding: 20rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.25);
}

.banner-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.banner-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border: 1rpx solid rgba(37, 99, 235, 0.08);
}

.banner-cover {
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.banner-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.banner-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.status-tag.active {
  background: #dcfce7;
  color: #15803d;
}

.status-tag.inactive {
  background: #fee2e2;
  color: #b91c1c;
}

.banner-meta {
  font-size: 24rpx;
  color: var(--muted);
  display: flex;
  gap: 16rpx;
}

.banner-link {
  font-size: 22rpx;
  color: var(--brand);
  word-break: break-all;
}

.banner-actions {
  display: flex;
  gap: 12rpx;
}

.btn-secondary,
.btn-danger {
  flex: 1;
  padding: 16rpx 0;
  border-radius: 12rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
}

.btn-secondary {
  background: #f0f4ff;
  color: var(--brand);
}

.btn-danger {
  background: #fee2e2;
  color: #b91c1c;
}

.empty-state {
  font-size: 26rpx;
  color: var(--muted);
  text-align: center;
  padding: 80rpx 0;
}

.form-modal {
  position: fixed;
  inset: 0;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 200;
}

.modal-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
}

.modal-body {
  position: relative;
  background: #ffffff;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx 40rpx;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-label {
  font-size: 26rpx;
  color: var(--text);
  font-weight: 600;
}

.form-input {
  padding: 18rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  background: #f8fafc;
  font-size: 26rpx;
}

.form-input.readonly {
  color: #94a3b8;
}

.file-upload {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.btn-upload {
  flex-shrink: 0;
  padding: 0 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #34d399 0%, #059669 100%);
  color: #ffffff;
  font-size: 26rpx;
  border: none;
}

.btn-upload:disabled {
  opacity: 0.6;
}

.upload-tip {
  font-size: 24rpx;
  color: #94a3b8;
}

.image-preview {
  margin-top: 12rpx;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #e2e8f0;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.picker {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  padding: 18rpx;
  font-size: 26rpx;
}

.switch-item {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.form-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 12rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  padding: 18rpx 0;
  border-radius: 16rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-cancel {
  background: #f0f4ff;
  color: var(--brand);
}

.btn-submit {
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
}


