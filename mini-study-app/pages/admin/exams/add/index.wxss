@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.exam-form-page {
  padding-bottom: 120rpx;
}

.form-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.required {
  color: #dc2626;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid var(--border);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid var(--border);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
}

.picker-value {
  padding: 20rpx;
  border: 2rpx solid var(--border);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
}

.radio-label {
  display: inline-flex;
  align-items: center;
  margin-right: 32rpx;
  font-size: 28rpx;
}

.question-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border);
}

.question-number {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--brand);
}

.options-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx dashed var(--border);
}

.options-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.option-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.option-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.option-label-badge {
  padding: 8rpx 16rpx;
  background: var(--brand);
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 48rpx;
  text-align: center;
}

.option-label-badge.correct-badge {
  background: #16a34a;
}

.option-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.correct-toggle {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  cursor: pointer;
  border: 2rpx solid var(--border);
  transition: all 0.2s;
  background: #fff;
  user-select: none;
}

.correct-toggle.correct-active {
  background: rgba(22, 163, 74, 0.15) !important;
  border-color: #16a34a !important;
}

.correct-mark {
  color: #16a34a;
  font-weight: 600;
}

.correct-placeholder {
  color: var(--muted);
}

.correct-input {
  border-color: #16a34a;
  background: rgba(22, 163, 74, 0.05);
}

.btn-danger {
  background: #dc2626;
  color: #fff;
  border: none;
}

.btn-danger.tiny {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

.empty-tip {
  text-align: center;
  color: var(--muted);
  padding: 60rpx 0;
  font-size: 26rpx;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 2rpx solid var(--border);
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-section .btn-primary {
  width: 100%;
}

