@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.exam-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.exam-item__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.exam-item__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8rpx;
}

.exam-item__meta {
  font-size: 24rpx;
  color: var(--muted);
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-badge.published {
  background: rgba(22, 163, 74, 0.1);
  color: #16a34a;
}

.status-badge.draft {
  background: rgba(107, 114, 128, 0.1);
  color: var(--muted);
}

.status-badge.archived {
  background: rgba(220, 38, 38, 0.1);
  color: #dc2626;
}

.exam-item__desc {
  font-size: 26rpx;
  color: var(--muted);
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.exam-item__footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.role-tag {
  padding: 6rpx 12rpx;
  background: rgba(37, 99, 235, 0.1);
  color: var(--brand);
  border-radius: 6rpx;
  font-size: 22rpx;
}

.empty-block {
  text-align: center;
  color: var(--muted);
  padding: 80rpx 0;
}

