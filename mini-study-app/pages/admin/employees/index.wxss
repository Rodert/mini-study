@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.employees-page {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.15);
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

.top-actions {
  display: flex;
  align-items: center;
}

.action-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 300;
  transition: all 0.3s ease;
}

.action-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 添加菜单 */
.add-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.add-menu.show {
  opacity: 1;
  visibility: visible;
}

.menu-content {
  position: absolute;
  top: 100rpx;
  right: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  min-width: 200rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.menu-item:active {
  background: #f8fafc;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.menu-text {
  font-size: 26rpx;
  color: var(--text);
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e2e8f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-icon {
  font-size: 24rpx;
  color: var(--muted);
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--text);
  background: transparent;
  border: none;
}

.search-input::placeholder {
  color: #cbd5e1;
}

/* 员工列表 */
.employees-list {
  flex: 1;
  padding: 16rpx 24rpx;
  overflow-y: auto;
}

.employee-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
  transition: all 0.3s ease;
}

.employee-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.employee-avatar {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.employee-basic {
  flex: 1;
}

.employee-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.employee-username {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 2rpx;
}

/* 卡片内容 */
.card-body {
  padding: 12rpx 0;
  border-top: 1rpx solid #e2e8f0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.info-label {
  color: var(--muted);
  min-width: 80rpx;
}

.info-value {
  color: var(--text);
  font-weight: 600;
  text-align: right;
  flex: 1;
}

.role-badge {
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 20rpx;
}

.role-badge.employee {
  background: #dcfce7;
  color: #15803d;
}

.role-badge.manager {
  background: #fef3c7;
  color: #b45309;
}

.role-badge.admin {
  background: #dbeafe;
  color: #1e40af;
}

.manager-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  justify-content: flex-end;
}

.tag {
  background: #f0f4ff;
  color: var(--brand);
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 8rpx;
}

.arrow {
  font-size: 24rpx;
  color: var(--brand);
  opacity: 0.5;
  transition: all 0.3s ease;
}

.employee-card:active .arrow {
  opacity: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  color: var(--muted);
}
