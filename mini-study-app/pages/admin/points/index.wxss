@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.points-page {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.15);
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e2e8f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-icon {
  font-size: 24rpx;
  color: var(--muted);
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--text);
  background: transparent;
  border: none;
}

.search-input::placeholder {
  color: #cbd5e1;
}

/* 积分列表 */
.points-list {
  flex: 1;
  padding: 16rpx 24rpx;
  overflow-y: auto;
}

.point-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
  transition: all 0.3s ease;
}

.point-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.user-avatar {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.user-basic {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.user-workno {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 2rpx;
}

.points-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 12rpx;
  border: 2rpx solid #fbbf24;
}

.points-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #b45309;
  line-height: 1.2;
}

.points-label {
  font-size: 20rpx;
  color: #92400e;
  margin-top: 2rpx;
}

/* 卡片内容 */
.card-body {
  padding: 12rpx 0;
  border-top: 1rpx solid #e2e8f0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.info-label {
  color: var(--muted);
  min-width: 80rpx;
}

.info-value {
  color: var(--text);
  font-weight: 600;
  text-align: right;
  flex: 1;
}

.role-badge {
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 20rpx;
}

.role-badge.employee {
  background: #dcfce7;
  color: #15803d;
}

.role-badge.manager {
  background: #fef3c7;
  color: #b45309;
}

.role-badge.admin {
  background: #dbeafe;
  color: #1e40af;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 8rpx;
}

.arrow {
  font-size: 24rpx;
  color: var(--brand);
  opacity: 0.5;
  transition: all 0.3s ease;
}

.point-card:active .arrow {
  opacity: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  color: var(--muted);
}

.loading-more {
  text-align: center;
  padding: 24rpx;
  color: var(--muted);
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 24rpx;
  color: var(--muted);
  font-size: 24rpx;
}
