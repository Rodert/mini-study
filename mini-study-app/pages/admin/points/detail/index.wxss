@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.detail-page {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.15);
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

/* 用户信息卡片 */
.user-info-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  margin: 16rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--muted);
}

.meta-divider {
  color: #cbd5e1;
}

.points-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 12rpx;
  border: 2rpx solid #fbbf24;
}

.points-label {
  font-size: 22rpx;
  color: #92400e;
  margin-bottom: 4rpx;
}

.points-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #b45309;
  line-height: 1.2;
}

/* 积分明细列表 */
.transactions-list {
  flex: 1;
  padding: 16rpx 24rpx;
  overflow-y: auto;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 0 4rpx;
}

.section-icon {
  font-size: 28rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid #e2e8f0;
}

.transaction-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.transaction-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.type-icon {
  font-size: 24rpx;
}

.type-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
}

.transaction-desc {
  font-size: 24rpx;
  color: var(--text);
  margin-top: 4rpx;
}

.transaction-memo {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 2rpx;
}

.transaction-time {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

.transaction-right {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.transaction-points {
  font-size: 32rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.transaction-points.positive {
  color: #059669;
  background: #d1fae5;
}

.transaction-points.negative {
  color: #dc2626;
  background: #fee2e2;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  color: var(--muted);
}

.loading-more {
  text-align: center;
  padding: 24rpx;
  color: var(--muted);
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 24rpx;
  color: var(--muted);
  font-size: 24rpx;
}

