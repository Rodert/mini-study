@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.back-btn-container {
  padding: 20rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--border);
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--brand);
  font-size: 28rpx;
  cursor: pointer;
}

.back-icon {
  font-size: 48rpx;
  line-height: 1;
  font-weight: 300;
}

.back-text {
  font-size: 28rpx;
}

.exam-summary {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.summary-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.summary-desc {
  color: var(--muted);
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.summary-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
  font-size: 24rpx;
  color: var(--text);
}

.question-card {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.question-index {
  font-weight: 600;
  color: var(--text);
}

.question-tag {
  font-size: 24rpx;
  color: var(--muted);
}

.question-stem {
  font-size: 30rpx;
  color: var(--text);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.option-row {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border);
  gap: 16rpx;
}

.option-row:last-child {
  border-bottom: none;
}

.option-indicator {
  margin-top: 8rpx;
}

.option-text {
  display: flex;
  gap: 12rpx;
}

.option-label {
  font-weight: 600;
  color: var(--brand);
}

.option-content {
  color: var(--text);
  line-height: 1.6;
}

.submit-btn {
  position: sticky;
  bottom: 24rpx;
  width: 100%;
  margin-top: 24rpx;
}

.empty-block {
  text-align: center;
  color: var(--muted);
  padding: 120rpx 0;
}


