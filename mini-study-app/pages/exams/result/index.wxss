@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.back-btn-container {
  padding: 20rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--border);
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--brand);
  font-size: 28rpx;
  cursor: pointer;
}

.back-icon {
  font-size: 48rpx;
  line-height: 1;
  font-weight: 300;
}

.back-text {
  font-size: 28rpx;
}

.summary-card {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.summary-title {
  font-size: 34rpx;
  font-weight: 600;
}

.summary-subtitle {
  font-size: 26rpx;
  color: var(--muted);
  margin-top: 8rpx;
}

.summary-score {
  text-align: right;
}

.score-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--brand);
}

.score-total {
  font-size: 28rpx;
  color: var(--muted);
  margin-left: 8rpx;
}

.summary-status {
  margin-top: 20rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.summary-status.pass {
  background: rgba(34, 197, 94, 0.12);
  color: #16a34a;
}

.summary-status.fail {
  background: rgba(220, 38, 38, 0.12);
  color: #dc2626;
}

.answer-card {
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.answer-title {
  font-size: 28rpx;
  font-weight: 600;
}

.answer-score {
  font-size: 26rpx;
  font-weight: 600;
}

.answer-score.pass {
  color: #16a34a;
}

.answer-score.fail {
  color: #dc2626;
}

.answer-stem {
  color: var(--text);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.answer-meta {
  font-size: 26rpx;
  color: var(--text);
  margin-bottom: 8rpx;
}

.meta-label {
  color: var(--muted);
}

.empty-block {
  text-align: center;
  padding: 120rpx 0;
  color: var(--muted);
}


