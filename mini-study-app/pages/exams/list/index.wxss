@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.refresh-btn {
  border: 1rpx solid var(--brand);
  color: var(--brand);
  background: #fff;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.exam-card {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.exam-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.exam-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text);
}

.exam-meta {
  font-size: 24rpx;
  color: var(--muted);
  margin-top: 8rpx;
}

.exam-desc {
  margin: 20rpx 0;
  color: var(--text);
  line-height: 1.6;
}

.status-pill {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background: rgba(37, 99, 235, 0.12);
  color: var(--brand);
  white-space: nowrap;
}

.status-pill.attempt {
  background: rgba(249, 115, 22, 0.15);
  color: #f97316;
}

.status-pill.success {
  background: rgba(34, 197, 94, 0.15);
  color: #22c55e;
}

.exam-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  margin-top: 12rpx;
}

.last-result {
  font-size: 24rpx;
  color: var(--text);
}

.last-result.muted {
  color: var(--muted);
}

.btn-primary.small {
  padding: 16rpx 32rpx;
  height: auto;
  line-height: 1;
}

.empty-block {
  text-align: center;
  padding: 80rpx 0;
  color: var(--muted);
}

.result-card {
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
}

.result-score {
  font-size: 32rpx;
  font-weight: 600;
}

.result-score.pass {
  color: #16a34a;
}

.result-score.fail {
  color: #dc2626;
}

.result-meta {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: var(--muted);
}

.text-pass {
  color: #16a34a;
}

.text-fail {
  color: #dc2626;
}


