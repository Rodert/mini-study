@import "../../../../styles/theme.wxss";
@import "../../../../styles/layout.wxss";

.edit-user-page {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.15);
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 表单分区 */
.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
}

.section-header {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.section-info {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.section-desc {
  font-size: 24rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: var(--muted);
}

.info-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
}

/* 角色选项 */
.role-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.role-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.role-option.selected {
  background: #f0f4ff;
  border-color: var(--brand);
}

.role-radio {
  width: 32rpx;
  height: 32rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: var(--brand);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.role-option.selected .role-radio {
  background: var(--brand);
  border-color: var(--brand);
  color: #ffffff;
}

.role-info {
  flex: 1;
}

.role-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.role-desc {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

/* 店长列表 */
.manager-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.manager-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.manager-item:active {
  transform: scale(0.98);
}

.manager-item.selected {
  background: #f0f4ff;
  border-color: var(--brand);
}

.manager-checkbox {
  width: 32rpx;
  height: 32rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: var(--brand);
  font-weight: 700;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.manager-item.selected .manager-checkbox {
  background: var(--brand);
  border-color: var(--brand);
  color: #ffffff;
}

.manager-info {
  flex: 1;
}

.manager-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.manager-store {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

/* 表单提示 */
.form-hint {
  font-size: 22rpx;
  color: var(--muted);
  padding: 8rpx 12rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
  border-left: 3rpx solid var(--brand);
}

/* 按钮组 */
.button-group {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.btn-save,
.btn-cancel {
  padding: 18rpx 0;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 14rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-save {
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-cancel {
  background: #f0f4ff;
  color: var(--brand);
  border: 2rpx solid var(--brand);
}

.btn-cancel:active {
  background: #e0e9ff;
  transform: scale(0.98);
}
