@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.growth-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
}

.top-bar {
  padding: 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.search-bar {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e2e8f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-icon {
  font-size: 24rpx;
  color: var(--muted);
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--text);
  background: transparent;
  border: none;
}

.manager-actions {
  padding: 16rpx 24rpx;
  background: #ffffff;
}

.btn-secondary {
  padding: 14rpx 24rpx;
  border-radius: 12rpx;
  border: none;
  background: #f0f4ff;
  color: var(--brand);
  font-size: 26rpx;
  font-weight: 600;
}

.post-list {
  padding: 16rpx 24rpx 40rpx;
}

.post-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.06);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.post-header-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
}

.post-header-info {
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.post-meta {
  font-size: 22rpx;
  color: var(--muted);
}

.post-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.post-image {
  width: 30%;
  aspect-ratio: 1 / 1;
  border-radius: 12rpx;
  object-fit: cover;
}

.btn-copy-small {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  border: none;
  background: #e0f2fe;
  color: #0369a1;
  font-size: 22rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: var(--muted);
}
