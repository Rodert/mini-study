@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.growth-page {
  min-height: 100vh;
  background: #f5f5f7;
}

.top-bar {
  padding: 16rpx 24rpx;
  background: #ffffff;
  color: var(--text);
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #e5e5ea;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.search-bar {
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e2e8f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-icon {
  font-size: 24rpx;
  color: var(--muted);
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--text);
  background: transparent;
  border: none;
}

.manager-actions {
  padding: 16rpx 24rpx;
  background: #ffffff;
}

.btn-secondary {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e5e5ea;
  background: #ffffff;
  color: #007aff;
  font-size: 26rpx;
  font-weight: 500;
}

.post-list {
  padding: 16rpx 24rpx 40rpx;
}

.post-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.post-header-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
}

.post-header-info {
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.post-meta {
  font-size: 22rpx;
  color: var(--muted);
}

.post-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.post-image-wrapper {
  width: calc((100% - 16rpx) / 3);
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.post-image-wrapper::before {
  content: "";
  display: block;
  padding-bottom: 100%;
}

.post-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.btn-copy-small {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.18);
  background: rgba(255, 255, 255, 0.9);
  color: #007aff;
  font-size: 22rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: var(--muted);
}
