/* pages/growth/mine/index.wxss */
@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.mine-page {
  min-height: 100vh;
  background: #f5f5f7;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #ffffff;
  color: var(--text);
  border-bottom: 1rpx solid #e5e5ea;
}

.back-button,
.top-placeholder {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.publish-card {
  margin: 12rpx 24rpx 8rpx;
  padding: 14rpx 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.publish-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.publish-input {
  min-height: 100rpx;
  padding: 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
  background: #f8fafc;
  font-size: 26rpx;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}

.preview-image {
  width: 30%;
  aspect-ratio: 1 / 1;
  border-radius: 12rpx;
  object-fit: cover;
}

.publish-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 12rpx;
}

.btn-primary {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  border: none;
  background: #007aff;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
}

.btn-secondary {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e5e5ea;
  background: #ffffff;
  color: #007aff;
  font-size: 26rpx;
  font-weight: 500;
}

.filters {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx 8rpx;
  margin-top: 4rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: var(--muted);
  margin-bottom: 4rpx;
}

.picker {
  background: #f8fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
}

.picker-value {
  padding: 10rpx 16rpx;
  font-size: 26rpx;
}

.search-input-wrapper {
  padding: 10rpx 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.search-input {
  font-size: 26rpx;
}

.post-list {
  padding: 8rpx 24rpx 40rpx;
}

.post-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.post-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
}

.post-header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.post-meta {
  font-size: 22rpx;
  color: var(--muted);
}

.post-header-right {
  display: flex;
}

.status-tag {
  font-size: 20rpx;
  padding: 0;
  border-radius: 0;
  background: transparent;
  color: var(--muted);
}

.status-tag.pending {
  color: #b45309;
}

.status-tag.approved {
  color: #15803d;
}

.status-tag.rejected {
  color: #b91c1c;
}

.post-header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.post-meta {
  font-size: 22rpx;
  color: var(--muted);
}

.post-header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.post-content {
  font-size: 26rpx;
  color: var(--text);
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.post-image-wrapper {
  width: calc((100% - 16rpx) / 3);
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.post-image-wrapper::before {
  content: "";
  display: block;
  padding-bottom: 100%;
}

.post-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.btn-copy-small {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(0, 122, 255, 0.18);
  background: rgba(255, 255, 255, 0.9);
  color: #007aff;
  font-size: 22rpx;
}

.btn-copy-icon {
  font-size: 24rpx;
}

.btn-danger {
  padding: 8rpx 18rpx;
  border-radius: 12rpx;
  border: none;
  background: #fee2e2;
  color: #b91c1c;
  font-size: 24rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: var(--muted);
}