@import "../../styles/theme.wxss";
@import "../../styles/layout.wxss";

.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #f0f4ff 50%, #faf5ff 100%);
  position: relative;
  overflow: hidden;
}

.login-container {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0;
}

/* 装饰圆形 */
.header-decoration {
  position: absolute;
  top: -100rpx;
  left: -50rpx;
  width: 400rpx;
  height: 400rpx;
  z-index: 0;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #2563eb, #1e3a8a);
  top: 0;
  left: 0;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #f97316, #ea580c);
  top: 80rpx;
  right: -50rpx;
}

.footer-decoration {
  position: absolute;
  bottom: -100rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  z-index: 0;
}

.circle-3 {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #2563eb, #1e3a8a);
  opacity: 0.08;
  border-radius: 50%;
}

/* 头部区域 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 32rpx 40rpx;
  position: relative;
  z-index: 2;
}

.logo-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10rpx); }
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 12rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
}

.header-desc {
  font-size: 28rpx;
  color: var(--muted);
  text-align: center;
  font-weight: 400;
}

/* 表单卡片 */
.form-card {
  flex: 1;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 48rpx 32rpx 60rpx;
  box-shadow: 0 -10rpx 40rpx rgba(15, 23, 42, 0.08);
  position: relative;
  z-index: 2;
  margin-top: 20rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 28rpx;
}

.label {
  font-size: 28rpx;
  color: var(--text);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 输入框包装 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8fafc;
  border-radius: 14rpx;
  border: 2rpx solid #e2e8f0;
  padding: 0 16rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: var(--brand);
  background: #ffffff;
  box-shadow: 0 0 0 8rpx rgba(37, 99, 235, 0.08);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input {
  flex: 1;
  padding: 18rpx 0;
  font-size: 28rpx;
  background: transparent;
  border: none;
  color: var(--text);
  outline: none;
}

.input::placeholder {
  color: #cbd5e1;
}

/* 错误提示 */
.error-text {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #dc2626;
  font-size: 26rpx;
  padding: 14rpx 16rpx;
  background: #fee2e2;
  border-radius: 10rpx;
  border-left: 4rpx solid #dc2626;
  margin-bottom: 24rpx;
}

.error-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

/* 按钮 */
.btn-primary {
  width: 100%;
  padding: 18rpx 0;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 14rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 24rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-primary:disabled {
  opacity: 0.5;
  box-shadow: none;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 32rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e2e8f0;
}

.divider-text {
  color: var(--muted);
  font-size: 26rpx;
}

/* 次要按钮 */
.btn-secondary {
  width: 100%;
  padding: 16rpx 0;
  background: #f0f4ff;
  color: var(--brand);
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: 2rpx solid var(--brand);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  margin-bottom: 12rpx;
}

.btn-secondary:active {
  background: #e0e9ff;
  transform: scale(0.98);
}

/* 第三按钮 */
.btn-tertiary {
  width: 100%;
  padding: 16rpx 0;
  background: #ffffff;
  color: var(--brand);
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: 2rpx solid var(--brand);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.btn-tertiary:active {
  background: #f8fafc;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 28rpx;
}

/* 表单底部说明区域 */
.login-footer-info {
  margin-top: auto;
  padding: 24rpx 32rpx 40rpx;
  border-top: 1rpx solid #e5e7eb;
  font-size: 22rpx;
  color: var(--muted);
  position: relative;
  z-index: 2;
}

.login-footer-official {
  text-align: center;
}

.official-footer-text {
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: var(--muted);
}

/* 帮助文本 */
.helper-text {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  font-size: 22rpx;
  color: var(--muted);
  line-height: 1.5;
  margin-top: 20rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border-left: none;
}

.helper-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

/* 模式指示器 */
.mode-indicator {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 6rpx;
  font-size: 22rpx;
  margin-top: 12rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  box-shadow: none;
}

.mode-label {
  color: #94a3b8;
  font-weight: 400;
  font-size: 22rpx;
}

.mode-value {
  font-weight: 500;
  font-size: 22rpx;
  letter-spacing: 0.3rpx;
  padding: 0;
  border-radius: 0;
  box-shadow: none;
}

.mode-value.mock {
  color: #b45309;
}

.mode-value.api {
  color: #2563eb;
}

.mode-url {
  flex: 1;
  min-width: 100%;
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
  word-break: break-all;
  font-family: 'Courier New', monospace;
  padding: 0;
  border-radius: 0;
}
