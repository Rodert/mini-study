@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.list-wrapper {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.course-card {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.course-cover {
  width: 180rpx;
  height: 160rpx;
  border-radius: 20rpx;
  object-fit: cover;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
}

.course-summary {
  font-size: 24rpx;
  color: var(--muted);
  line-height: 1.4;
}

.course-type-pill {
  margin-top: auto;
  font-size: 22rpx;
  color: var(--brand);
  background: rgba(37, 99, 235, 0.08);
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  width: fit-content;
}

