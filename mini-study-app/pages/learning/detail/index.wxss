@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.detail-card {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-video {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #000;
}

.article-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.6;
}

.course-meta {
  font-size: 24rpx;
  color: var(--muted);
  display: flex;
  gap: 16rpx;
}

.course-summary {
  font-size: 28rpx;
  line-height: 1.5;
}

.status-pill {
  width: fit-content;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background-color: rgba(37, 99, 235, 0.1);
  color: var(--brand);
  font-size: 24rpx;
}

