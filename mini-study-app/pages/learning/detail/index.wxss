@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.detail-card {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-video {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
  background: #000;
}

.article-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.6;
}

.article-text {
  margin-bottom: 20rpx;
}

.article-image {
  width: 100%;
  border-radius: 16rpx;
  margin: 12rpx 0;
}

.doc-viewer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx dashed rgba(37, 99, 235, 0.2);
}

.doc-tip {
  font-size: 26rpx;
  color: var(--muted);
}

.doc-filename {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.btn-doc {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  border: none;
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: #fff;
  font-size: 28rpx;
}

.btn-doc:disabled {
  opacity: 0.7;
}

.doc-path {
  font-size: 22rpx;
  color: #94a3b8;
  word-break: break-all;
}

.course-meta {
  font-size: 24rpx;
  color: var(--muted);
  display: flex;
  gap: 16rpx;
}

.course-summary {
  font-size: 28rpx;
  line-height: 1.5;
}

.status-pill {
  width: fit-content;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background-color: rgba(37, 99, 235, 0.1);
  color: var(--brand);
  font-size: 24rpx;
}

