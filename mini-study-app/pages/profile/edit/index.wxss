@import "../../../styles/theme.wxss";
@import "../../../styles/layout.wxss";

.edit-page {
  display: flex;
  flex-direction: column;
  background: #f5f5f7;
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #ffffff;
  color: var(--text);
  border-bottom: 1rpx solid #e5e5ea;
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 表单分区 */
.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.section-info {
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.section-desc {
  font-size: 24rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 14rpx 16rpx;
  background: #ffffff;
  border: 1rpx solid #e5e5ea;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #007aff;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.08);
}

.form-input::placeholder {
  color: #cbd5e1;
}

/* 表单提示 */
.form-hint {
  font-size: 22rpx;
  color: var(--muted);
  margin-top: 12rpx;
  padding: 8rpx 12rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
  border-left: 3rpx solid var(--brand);
}

/* 信息展示 */
.info-display {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: var(--muted);
  min-width: 80rpx;
}

.info-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
  text-align: right;
  flex: 1;
}

.manager-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: flex-end;
}

.tag {
  background: #f0f4ff;
  color: var(--brand);
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
}

/* 按钮组 */
.button-group {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.btn-save,
.btn-cancel {
  padding: 18rpx 0;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 14rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-save {
  background: #007aff;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.btn-cancel {
  background: #ffffff;
  color: #007aff;
  border: 1rpx solid #e5e5ea;
}

.btn-cancel:active {
  background: #f2f2f7;
  transform: scale(0.98);
}
