@import "../../styles/theme.wxss";
@import "../../styles/layout.wxss";

.profile-page {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f4ff 100%);
  min-height: 100vh;
  padding: 0;
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.15);
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.top-title {
  font-size: 32rpx;
  font-weight: 700;
}

.top-placeholder {
  width: 48rpx;
}

/* 用户信息卡片 */
.user-card {
  margin: 24rpx 24rpx 0;
  padding: 28rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
}

.user-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: var(--muted);
}

.meta-icon {
  font-size: 24rpx;
}

.user-store {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--text);
  border-left: 4rpx solid var(--brand);
}

.store-icon {
  font-size: 28rpx;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin: 80rpx 24rpx;
  padding: 48rpx 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  text-align: center;
}

.prompt-icon {
  font-size: 80rpx;
}

.prompt-text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.prompt-desc {
  font-size: 26rpx;
  color: var(--muted);
}

.login-prompt .btn-primary {
  margin-top: 24rpx;
  width: 200rpx;
}

/* 分区 */
.section {
  padding: 32rpx 24rpx;
}

.section-title-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text);
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--muted);
  margin-top: 4rpx;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
  text-align: center;
}

.stat-icon {
  font-size: 40rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--brand);
}

.stat-unit {
  font-size: 20rpx;
  color: var(--muted);
}

.stat-label {
  font-size: 22rpx;
  color: var(--muted);
  line-height: 1.3;
}

.stat-card.empty {
  grid-column: 1 / -1;
  padding: 32rpx;
  color: var(--muted);
  font-size: 26rpx;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-item:last-of-type {
  border-bottom: none;
  padding-bottom: 0;
  margin-bottom: 16rpx;
}

.info-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: var(--muted);
  margin-bottom: 6rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.manager-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.tag {
  background: #f0f4ff;
  color: var(--brand);
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
}

.btn-edit-info {
  width: 100%;
  padding: 16rpx 0;
  margin-top: 16rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
  transition: all 0.3s ease;
}

.btn-edit-info:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(37, 99, 235, 0.15);
}

/* 快速操作网格 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid rgba(37, 99, 235, 0.05);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.12);
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
}

/* 底部空间 */
.bottom-space {
  height: 40rpx;
}

