.page-wrap {
  padding: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 12rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: var(--muted);
  margin-bottom: 24rpx;
}

.grid {
  display: grid;
  grid-gap: 24rpx;
}

.grid.two {
  grid-template-columns: repeat(2, 1fr);
}

.grid.auto-fit {
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
}

.btn-primary {
  background-color: var(--brand);
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
  border: none;
}

.btn-primary:active {
  background-color: #1e3a8a;
  box-shadow: 0 2rpx 6rpx rgba(37, 99, 235, 0.2);
  transform: scale(0.98);
}

.btn-primary:disabled {
  opacity: 0.6;
  box-shadow: none;
}

.btn-secondary {
  background-color: #f0f4ff;
  color: var(--brand);
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 28rpx;
  border: 2rpx solid var(--brand);
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: #e0e9ff;
  transform: scale(0.98);
}

